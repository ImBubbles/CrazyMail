{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["ES2015", "ES2017", "ES2018", "ES2019", "ES2020", "ES2021", "ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "noEmit": true,
    "types": [],
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,
    "baseUrl": "..",
    "paths": {
      "~/*": ["./app/*"],
      "@/*": ["./app/*"]
    }
  },
  "include": [
    "./**/*",
    "../.nuxt/nuxt.d.ts"
  ],
  "exclude": [
    "../node_modules"
  ]
}

